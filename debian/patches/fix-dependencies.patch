Description: Do not require libsecret-1 and gobject-2.0 development packages
 QtKeychain do not exposes the mentioned libraries at there interface, so mark
 the target_link_libraries as PRIVATE.
Author: Sandro Knau√ü <hefee@debian.org>
Origin: Debian
Bug-Debian: https://bugs.debian.org/905659
Last-Update: 2018-08-08
---
This patch header follows DEP-3: http://dep.debian.net/deps/dep3/
--- a/CMakeLists.txt
+++ b/CMakeLists.txt
@@ -112,7 +112,6 @@ endif()
 
 include_directories(${CMAKE_CURRENT_BINARY_DIR})
 
-list(APPEND qtkeychain_LIBRARIES ${QTCORE_LIBRARIES})
 set(qtkeychain_SOURCES
     keychain.cpp
     qkeychain_export.h
@@ -203,7 +202,11 @@ else()
     add_library(${QTKEYCHAIN_TARGET_NAME} STATIC ${qtkeychain_SOURCES} ${qtkeychain_MOC_OUTFILES} ${qtkeychain_QM_FILES})
 endif()
 
-target_link_libraries(${QTKEYCHAIN_TARGET_NAME} PUBLIC ${qtkeychain_LIBRARIES})
+target_link_libraries(${QTKEYCHAIN_TARGET_NAME}
+    PUBLIC ${QTCORE_LIBRARIES}
+    PRIVATE ${qtkeychain_LIBRARIES}
+)
+
 target_include_directories(${QTKEYCHAIN_TARGET_NAME} PUBLIC $<INSTALL_INTERFACE:include/>)
 
 generate_export_header(${QTKEYCHAIN_TARGET_NAME}
