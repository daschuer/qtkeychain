#!/usr/bin/make -f
# -*- makefile -*-
# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

export DEB_BUILD_MAINT_OPTIONS=hardening=+all
export DEB_CXXFLAGS_MAINT_APPEND = -fvisibility=hidden -fvisibility-inlines-hidden
DPKG_EXPORT_BUILDFLAGS = 1
include /usr/share/dpkg/buildflags.mk

%:
	dh $@ --parallel --with kde --with pkgkde_symbolshelper

override_dh_auto_clean:
	dh_auto_clean
	rm -rf build-Qt4

override_dh_auto_configure:
	dh_auto_configure --
	dh_auto_configure --builddirectory=build-Qt4  -- -DBUILD_WITH_QT4=ON

override_dh_auto_build:
	dh_auto_build
	dh_auto_build --builddirectory=build-Qt4

override_dh_auto_install:
	dh_auto_install
	dh_auto_install --builddirectory=build-Qt4

override_dh_install:
	dh_install --list-missing

